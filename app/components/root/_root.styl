// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

*
	box-sizing: border-box

html,
body
	height: 100%

body
	font-family: 'Roboto Condensed', sans-serif

#Site-Container
	width: 100%
	height: 100%
	
#Root
	position: relative
	width: 100%
	height: 100%
	
.page
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	
.page-enter
	left: 100%
	transition: left 800ms ease-in-out
.page-enter-active
	left: 0%
		
.page-leave
	left: 0%
	transition: left 800ms ease-in-out
.page-leave-active
	left: -100%