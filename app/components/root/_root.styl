// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

*
	box-sizing: border-box

html,
body
	height: 100%

body
	font-family: 'Roboto Condensed', sans-serif

#Site-Container
	width: 100%
	height: 100%
	
#Root
	position: relative
	width: 100%
	height: 100%
	overflow: auto
	.page
		position: absolute
		top: 0
		left: 0
		width: 100%
		min-height: 100%
		.contents
			position: relative
	.page-enter,
	.page-leave
		transition: left 800ms ease-in-out
		
	&.left .page-enter,
	&.right .page-leave.page-leave-active
		left: 100%
	&.left .page-enter.page-enter-active,
	&.left .page-leave,
	&.right .page-leave,
	&.right .page-enter.page-enter-active
		left: 0%
	&.left .page-leave.page-leave-active,
	&.right .page-enter
		left: -100%
	